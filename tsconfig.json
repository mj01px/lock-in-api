{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true,

    "strict": true,
    "skipLibCheck": true,

    "typeRoots": ["./src/@types", "./node_modules/@types"],
    "baseUrl": "."
  },
  "include": ["src", "src/@types"],
  "exclude": ["node_modules", "build"]
}
